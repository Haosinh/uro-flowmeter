@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UroMeter.Web.Models.Users.CreateUserViewModel

@{
    Layout = "_Layout";
}

<div class="container bg-white py-5 px-sm-3 px-md-5 mt-4 rounded">
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="Index">Back</a>
    <hr class="border border-primary border-2 opacity-50" />
    <p class="h2 mb-3">Create new patient</p>
    @using (Html.BeginForm("Create", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            @Html.LabelFor(e => e.Name, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Name, "", new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(e => e.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(e => e.BirthDay, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.BirthDay, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "Birthday", type = "date" })
                @Html.ValidationMessageFor(e => e.BirthDay, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(e => e.Phone, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Phone, "", new { @class = "form-control", placeholder = "Phone" })
                @Html.ValidationMessageFor(e => e.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <button class="btn btn-primary" asp-controller="User" asp-action="Create" type="submit">Save</button>
    }
    <hr class="border border-primary border-2 opacity-50" />
</div>
