@model UroMeter.Web.Models.Users.CreateUserViewModel

<div>
    @using (Html.BeginForm("Create", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div>
            <div class="mb-3">
                @Html.LabelFor(u => u.Name, new { @class = "form-label" })
                @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-3">
                @Html.LabelFor(u => u.BirthDay, new { @class = "form-label" })
                <input class="form-control" asp-for="BirthDay" />
            </div>
            <div class="mb-3">
                @Html.LabelFor(u => u.Phone, new { @class = "form-label" })
                @Html.EditorFor(u => u.Phone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <button class="btn btn-secondary" asp-controller="User" asp-action="Index" type="submit">Back</button>
        <button class="btn btn-primary" asp-controller="User" asp-action="Create" type="submit">Save</button>
    }
</div>